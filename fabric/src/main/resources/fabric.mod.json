{
    "schemaVersion": 1,
    "id": "${mod_id}",
    "version": "${version}",
    "name": "${mod_name}",
    "description": "${description}",
    "authors": [
        "${mod_author}"
    ],
    "contributors": ["${credits}"],
    "contact": {
        "homepage": "https://modrinth.com/mod/korean-chat-patch",
        "sources": "https://github.com/najoan125/KoreanPatch-multiLoader",
        "issues": "https://github.com/najoan125/KoreanPatch-multiLoader/issues"
    },
    "license": "${license}",
    "icon": "assets/koreanpatch/icon.png",
    "environment": "client",
    "accessWidener": "koreanpatch.accesswidener",
    "entrypoints": {
        "client": [
            "com.hyfata.najoan.koreanpatch.client.KoreanPatchFabric"
        ]
    },
    "mixins": [
        "${mod_id}.mixins.json",
        "${mod_id}.fabric.mixins.json"
    ],
    "depends": {
        "fabricloader": ">=${fabric_loader_version}",
        "minecraft": "${fabric_version_range}",
        "java": ">=${java_version}",
        "fabric-api-base": "*",
        "fabric-key-binding-api-v1": "*",
        "fabric-lifecycle-events-v1": "*",
        "fabric-resource-loader-v0": "*",
        "fabric-screen-api-v1": "*"
    },
    "suggests": {
        "another-mod": "*"
    },
    "custom": {
        "modmenu": {
            "links": {
                "modmenu.modrinth": "https://modrinth.com/mod/korean-chat-patch",
                "modmenu.donate": "https://github.com/sponsors/najoan125",
                "modmenu.patreon": "https://patreon.com/Najoan"
            }
        }
    }
}
